FROM node:18-alpine AS build

WORKDIR /app

# Copiar ONLY archivos de dependencias
COPY package*.json ./

# Instalar dependencias (incluye highlight.js)
RUN npm install
RUN npm install highlight.js

# Copiar resto del c√≥digo
COPY . .

# Construir el dashboard
RUN npm run build

FROM node:18-alpine
WORKDIR /app
RUN npm install -g serve
COPY --from=build /app/dist /app/dist
EXPOSE 3000
CMD ["serve", "-s", "dist", "-l", "3000"]
